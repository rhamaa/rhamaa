---
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
if (!slug) {
  throw new Error("Missing slug parameter");
}

const projects = await getCollection("projects");
const project = projects.find((entry) => entry.slug === slug) as CollectionEntry<"projects"> | undefined;

if (!project) {
  throw new Error(`Project not found for slug: ${slug}`);
}

const { Content } = await project.render();
---

<!DOCTYPE html>
<html lang="en">
  <Header title={`${project.data.title} | Projects`} />
  <body class="bg-[#FFF8F0] text-gray-900">
    <div class="max-w-4xl mx-auto px-6 py-12">
      
      <!-- Back Button -->
      <a href="/projects" class="inline-flex items-center gap-2 mb-8 px-4 py-2 bg-white border-3 border-black hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all">
        <span class="text-xl">‚Üê</span>
        <span class="font-bold">Back to Projects</span>
      </a>

      <!-- Project Header -->
      <article class="bg-white border-3 border-black p-8 md:p-12 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
        
        {project.data.image && (
          <div class="mb-8 -mx-8 md:-mx-12 -mt-8 md:-mt-12">
            <img src={project.data.image} alt={project.data.title} class="w-full h-64 md:h-96 object-cover border-b-3 border-black" />
          </div>
        )}

        <div class="mb-6">
          <!-- Category Badge -->
          <div class="flex items-center gap-3 mb-4">
            <span class="px-4 py-2 bg-[#A8E6CF] border-2 border-black font-bold text-sm rounded-full">
              {project.data.category}
            </span>
            <span class="text-gray-500 text-sm">
              {project.data.date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}
            </span>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{project.data.title}</h1>
          <p class="text-xl text-gray-600 mb-6">{project.data.summary}</p>

          <!-- Tech Stack -->
          {project.data.tech.length > 0 && (
            <div class="mb-6">
              <h3 class="text-sm font-bold text-gray-500 uppercase mb-2">Tech Stack</h3>
              <div class="flex flex-wrap gap-2">
                {project.data.tech.map((tech) => (
                  <span class="px-3 py-1 bg-[#E8DFF5] border-2 border-black text-xs font-semibold rounded-full">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          )}

          <!-- Key Highlights -->
          {project.data.bullets.length > 0 && (
            <div class="mb-6 p-4 bg-[#FFF8E1] border-2 border-black rounded-lg">
              <h3 class="text-sm font-bold text-gray-700 uppercase mb-3">Key Highlights</h3>
              <ul class="space-y-2">
                {project.data.bullets.map((bullet) => (
                  <li class="flex gap-2 text-sm">
                    <span class="text-[#98c379] font-bold">‚úì</span>
                    <span>{bullet}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Links -->
          <div class="flex flex-wrap gap-3">
            {project.data.link && (
              <a 
                href={project.data.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-[#61afef] text-white border-2 border-black font-bold hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all"
              >
                <span>üîó</span>
                <span>Live Demo</span>
              </a>
            )}
            {project.data.github && (
              <a 
                href={project.data.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-black text-white border-2 border-black font-bold hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all"
              >
                <span>üì¶</span>
                <span>GitHub</span>
              </a>
            )}
          </div>
        </div>

        <!-- Project Content -->
        <div
          class="prose prose-lg max-w-none prose-headings:font-sans prose-headings:font-bold prose-headings:text-gray-900 prose-h1:border-b-4 prose-h1:border-black prose-h1:pb-4 prose-h1:mt-12 prose-h1:mb-6 prose-h2:border-b-4 prose-h2:border-black prose-h2:pb-4 prose-h2:mt-10 prose-h2:mb-5 prose-h3:mt-8 prose-h3:mb-4 prose-h4:mt-6 prose-h4:mb-3 prose-a:text-purple-600 hover:prose-a:text-purple-700 prose-a:no-underline hover:prose-a:underline prose-strong:text-black prose-code:bg-atom-bg prose-code:text-atom-green prose-code:px-2 prose-code:py-0.5 prose-code:rounded prose-code:border-2 prose-code:border-black prose-pre:bg-atom-bg prose-pre:text-atom-fg prose-pre:border-4 prose-pre:border-black prose-pre:rounded-xl prose-pre:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] prose-pre:px-5 prose-pre:py-6 prose-ul:marker:text-purple-600 prose-ol:marker:text-purple-900 prose-li:my-2 prose-blockquote:border-l-4 prose-blockquote:border-purple-500 prose-blockquote:bg-purple-100/30 prose-blockquote:rounded-lg prose-blockquote:py-4 prose-blockquote:px-6 prose-img:border-4 prose-img:border-black prose-img:rounded-2xl prose-img:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] prose-hr:border-black prose-hr:border-t-4 prose-hr:border-dashed prose-table:border-4 prose-table:border-black prose-th:bg-black prose-th:text-white prose-th:font-bold prose-td:border-b-2 prose-td:border-black"
        >
          <Content />
        </div>
      </article>

    </div>

    <style>
      .border-3 {
        border-width: 3px;
      }
    </style>
  </body>
</html>
