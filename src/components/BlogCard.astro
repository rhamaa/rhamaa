---
interface Props {
  title: string;
  description: string;
  date: Date;
  author: string;
  image?: string;
  tags: string[];
  slug: string;
}

const { title, description, date, author, image, tags, slug } = Astro.props;
---

<a href={`/blog/${slug}`} class="block bg-white border-3 border-black p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:-translate-y-1 transition-all group">
  {image && (
    <div class="mb-4 overflow-hidden border-3 border-black">
      <img src={image} alt={title} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
    </div>
  )}
  
  <div class="flex items-center gap-3 mb-3 text-sm text-gray-600">
    <span class="font-mono">{date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
    <span>â€¢</span>
    <span>{author}</span>
  </div>

  <h3 class="text-2xl font-bold mb-3 group-hover:text-[#c678dd] transition-colors">{title}</h3>
  <p class="text-gray-700 mb-4 line-clamp-3">{description}</p>

  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="px-3 py-1 bg-[#E8DFF5] border-2 border-black text-xs font-semibold rounded-full">
          #{tag}
        </span>
      ))}
    </div>
  )}
</a>
